 1 {
 2   "definitions": {},
 3   "$schema": "",
 4   "$id": "http://example.com/root.json",
 5   "type": "object",
 6   "title": "Kot Configuration",
 7   "description": "Configuration schema for Kot.",
 8   "default": {},
 9   "required": [
10     "name",
11     "dependencies",
12     "modules"
13   ],
14   "properties": {
15     "name": {
16       "$id": "#/properties/name",
17       "type": "string",
18       "title": "Name of the project",
19       "default": "",
20       "examples": [
21         "my_project"
22       ],
23       "pattern": "([A-z]|[0-9]|[\\-])"
24     },
25     "dependencies": {
26       "$id": "#/properties/dependencies",
27       "type": "array",
28       "title": "Build dependencies",
29       "default": [],
30       "items": {
31         "$id": "#/properties/dependencies/items",
32         "type": "string",
33         "title": "Deps",
34         "default": "",
35         "examples": [
36           "org.jetbrains.kotlin:kotlin-stdlib:1.3.50",
37           "org.jetbrains.kotlin:kotlin-reflect:1.3.50",
38           "org.jetbrains.kotlinx:kotlinx-coroutines-core:1.3.2",
39           "org.koin:koin-core:2.0.1"
40         ],
41         "pattern": "^(.*)$"
42       }
43     },
44     "modules": {
45       "$id": "#/properties/modules",
46       "type": "object",
47       "title": "Modules schema",
48       "required": [
49         "simple",
50         "complex"
51       ],
52       "properties": {
53         "simple": {
54           "$id": "#/properties/modules/properties/simple",
55           "type": "array",
56           "title": "Simple value"
57         },
58         "complex": {
59           "$id": "#/properties/modules/properties/complex",
60           "type": "array",
61           "title": "Complex value",
62           "items": {
63             "$id": "#/properties/modules/properties/complex/items",
64             "type": "string",
65             "title": "Complex item value",
66             "default": "",
67             "examples": [
68               "simple"
69             ],
70             "pattern": "^(.*)$"
71           }
72         }
73       }
74     }
75   }
76 }
